---
const { onClick } = Astro.props;
---

<div class="h-screen flex justify-center items-center">
  <div class="linear-gradient-2"></div>
  <a href="guia-gratuita">
    <img
      class="cursor-pointer h-36 z-20 heartbeat"
      src="logo.png"
      alt="Logo"
    />

  </a>
</div>

<style>
  .heartbeat {
    animation: heartbeat 1.2s infinite;
  }

  @keyframes heartbeat {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.3);
    }
    100% {
      transform: scale(1);
    }
  }
</style>
