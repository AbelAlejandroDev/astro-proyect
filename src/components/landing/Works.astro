---
import Carousel from './Carousel';
---

<article id="works" class="text-gray-600 bg-[#151515] body-font">
  <!-- Grid -->
  <div class="container px-5 py-24 pt-12 mx-auto">
    <div class="flex flex-wrap -m-4 justify-center">
      <div class="w-full sm:w-1/2 lg:w-1/2 p-4">
        <div class="flex relative w-full h-60  sm:h-80"> <!-- Altura fija definida aquí -->
          <img alt="gallery" class="absolute inset-0 w-full h-full rounded-xl" src="/rdremodeling.jpeg">
          <div class="px-8 py-10 relative z-10 w-full h-full border-4 rounded-xl border-gray-200 bg-white opacity-0 hover:opacity-100">
            <h2 class="tracking-widest text-sm title-font font-medium text-orange-700 mb-1">R & D Remodeling</h2>
            <a href="https://rdremodelingsa.com/" target="_blank" class="text-[#4D9EEF] flex items-center gap-1 hover:gap-4 transition-all">Ir al sitio
              <img src="/icons/arrow-left.svg" class="h-7"/>
            </a>
          </div>
        </div>
      </div>
      <div class="w-full sm:w-1/2 lg:w-1/2 p-4">
        <div class="flex relative w-full h-60  sm:h-80"> <!-- Altura fija definida aquí -->
          <img alt="gallery" class="absolute inset-0 w-full h-full rounded-xl" src="/Nation-wide.jpeg">
          <div class="px-8 py-10 relative z-10 w-full h-full border-4 rounded-xl border-gray-200 bg-white opacity-0 hover:opacity-100">
            <h2 class="tracking-widest text-sm title-font font-medium text-blue-400 mb-1">Nationwide Frame & Drywall</h2>
            <a href="https://nationwframedrywall.com/" target="_blank" class="text-[#4D9EEF] flex items-center gap-1 hover:gap-4 transition-all">Ir al sitio
              <img src="/icons/arrow-left.svg" class="h-7"/>
            </a>
          </div>
        </div>
      </div>
      <div class="w-full sm:w-1/2 lg:w-1/2 p-4">
        <div class="flex relative w-full h-60  sm:h-80"> <!-- Altura fija definida aquí -->
          <img alt="gallery" class="absolute inset-0 w-full h-full rounded-xl" src="clinica-san-rafael.jpeg">
          <div class="px-8 py-10 relative z-10 w-full h-full border-4 rounded-xl border-gray-200 bg-white opacity-0 hover:opacity-100">
            <h2 class="tracking-widest text-sm title-font font-medium text-green-700 mb-1">Clinica Conroe</h2>
            <a href="https://clinicasrconroe.com/" target="_blank" class="text-[#4D9EEF] flex items-center gap-1 hover:gap-4 transition-all">Ir al sitio
              <img src="/icons/arrow-left.svg" class="h-7"/>
            </a>
          </div>
        </div>
      </div>
      <div class="w-full sm:w-1/2 lg:w-1/2 p-4">
        <div class="flex relative w-full h-60  sm:h-80"> <!-- Altura fija definida aquí -->
          <img alt="gallery" class="absolute inset-0 w-full h-full rounded-xl" src="clinicafamilarprk.jpeg">
          <div class="px-8 py-10 relative z-10 w-full h-full border-4 rounded-xl border-gray-200 bg-white opacity-0 hover:opacity-100">
            <h2 class="tracking-widest text-sm title-font font-medium text-red-500 mb-1">Clinica Familiar Park</h2>
            <a href="https://clinicafamiliarprk.com/" target="_blank" class="text-[#4D9EEF] flex items-center gap-1 hover:gap-4 transition-all">Ir al sitio
              <img src="/icons/arrow-left.svg" class="h-7"/>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-10">
      <Carousel client:load />
    </div>
  </div>
</article>
