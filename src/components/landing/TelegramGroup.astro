<article id="telegram-Group" class="text-white bg-[#151515] py-6">
  <div
    class="relative h-[400px] xl:h-[400px] w-full bg-auto bg-center bg-[#151515] mt-[-10px] sm:mt-0 flex flex-col justify-center items-center"
  >
    <!--  Fondo lineal abajo -->
    <div
      class="absolute bottom-0 left-0 right-0 h-16 bg-gradient-to-b from-transparent to-[#151515]"
    >
