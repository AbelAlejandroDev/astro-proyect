---
import Layout from "../layouts/Layout.astro";
import Video from "../components/Video.astro";
import Formulario from "../components/Formulario";
---

<Layout title="Welcome to GENESIS.">
  <main class="content-presentation">
    <div class="linear-gradient-2"></div>
    <div class="linear-gradient-1"></div>
    <dir class="container-persentation">
      <div class="flex justify-center items-center py-6">
        <img class="logotipo w-full sm:w-[80%]" src="logotipo.png" alt="Logo" class="z-10" />
      </div>
      <Video />
      <Formulario client:load />
    </dir>
  </main>
</Layout>

<style>
  main {
    position: relative;
    background-color: #000;
  }
 html{
  background-color: #000 !important;
 }

  .content-presentation {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .container-persentation {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 50px 0;
    width: 80%;
    margin: 0 auto;
    max-width: 1355px;
  }

  
  .logotipo {
    position: relative;
    display: block;
    object-fit: cover;
    filter: drop-shadow(20px -5px 30px #08316f) contrast(110%);
    transition: 0.3s;
    z-index: 100;
  }
  
  /* Gradients */
  .linear-gradient-1 {
    position: absolute;
    left: 0;
    top: 0;
    width: 500px;
    height: 520px;
    background: radial-gradient(
      at left center,
      rgba(1, 190, 150, 0.5),
      transparent,
      transparent
      );
      z-index: 0;
    }
    .linear-gradient-2 {
      background: radial-gradient(
        at right center,
        rgba(36, 1, 190, 0.6),
        rgb(0, 0, 0),
        rgb(0, 0, 0)
        );
        z-index: 0;
      }
      
      /* Responsive */
      @media (max-width: 900px) {
        .container-persentation {
          flex-direction: column;
          height: auto;
          gap: 30px;
          padding-top: 100px;
        }
      }
    
      @media (max-width: 500px) {
        .container-curriculum {
          display: flex;
          gap: 10px;
        }
        .linear-gradient-1 {
          display: none;
        }
      }
</style>
